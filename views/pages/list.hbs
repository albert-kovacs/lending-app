<h3>LIST OF LENT ITEMS</h3>

<table class="table table-striped">
    <thread>
        <tr>
            <th>ITEM</th>
            <th>NAME</th>
            <th>EMAIL</th>
            <th>WHEN</th>
            <th>DEADLINE</th>
            <th>COMMENTS</th>
            <th></th>
        </tr>
    </thread>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.item}}</td>
            <td>{{this.toWhom}}</td>
            <td>{{this.email}}</td>
            <td>{{formatDate this.when}}</td>
            <td>{{formatDate this.deadline}}</td>
            <td>{{this.comments}}</td>
            <td>
                <a href="/record/{{this._id}}"><i class="fas fa-pencil-alt fa-lg"></i></a>
                <a href="/record/delete/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this record?');"><i class="fa fa-trash fa-lg"
                        aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<div class="form-group">
    <a class="btn btn-secondary" href="/record">New Item</a>
</div>